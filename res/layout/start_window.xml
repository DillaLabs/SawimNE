<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center" android:background="#f2ffde">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registration_jid"
            android:id="@+id/reg_jid" android:layout_gravity="center_horizontal" android:textColor="#000000"
            android:textSize="20dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in_jabber"
            android:id="@+id/sign_in_jabber" android:layout_gravity="center" android:textColor="#000000"
            android:textSize="20dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_into_other_networks"
            android:id="@+id/sign_into_other_networks" android:layout_gravity="center" android:textColor="#000000"
            android:textSize="20dp"/>
</LinearLayout>