<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:editTextStyle">@style/EditText</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:navigationBarColor">@color/primary</item>

        <!-- Toolbar Theme / Apply white arrow -->
        <item name="colorControlNormal">@android:color/white</item>

        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <item name="text">@color/text</item>
        <item name="list_divider">@color/list_divider</item>
        <item name="item_selected">@color/item_selected</item>
        <item name="param_value">@color/param_value</item>
        <item name="chat_in_msg_text">@color/chat_in_msg_text</item>
        <item name="chat_out_msg_text">@color/chat_out_msg_text</item>
        <item name="contact_online">@color/contact_online</item>
        <item name="contact_with_chat">@color/contact_with_chat</item>
        <item name="contact_offline">@color/contact_offline</item>
        <item name="contact_temp">@color/contact_temp</item>
        <item name="group">@color/group</item>
        <item name="chat_highlight_msg">@color/chat_highlight_msg</item>
        <item name="contact_status">@color/contact_status</item>
        <item name="protocol_background">@color/protocol_background</item>
        <item name="link">@color/link</item>
        <item name="link_highlight">@color/link_highlight</item>
        <item name="unread_message_divider">@color/unread_message_divider</item>
        <item name="bar_unread_message">@color/bar_unread_message</item>
        <item name="bar_personal_unread_message">@color/bar_personal_unread_message</item>
        <item name="unread_message">@color/unread_message</item>
        <item name="personal_unread_message">@color/personal_unread_message</item>
    </style>

    <style name="BaseThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:editTextStyle">@style/EditText</item>

        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryDark">@color/light_primary_dark</item>
        <item name="colorAccent">@color/light_accent</item>
        <item name="android:navigationBarColor">@color/light_primary</item>

        <item name="android:textColorPrimary">@color/light_primary_text</item>
        <item name="android:textColorSecondary">@color/light_secondary_text</item>

        <item name="text">@color/light_text</item>
        <item name="list_divider">@color/light_list_divider</item>
        <item name="item_selected">@color/light_item_selected</item>
        <item name="param_value">@color/light_param_value</item>
        <item name="chat_in_msg_text">@color/light_chat_in_msg_text</item>
        <item name="chat_out_msg_text">@color/light_chat_out_msg_text</item>
        <item name="contact_online">@color/light_contact_online</item>
        <item name="contact_with_chat">@color/light_contact_with_chat</item>
        <item name="contact_offline">@color/light_contact_offline</item>
        <item name="contact_temp">@color/light_contact_temp</item>
        <item name="group">@color/light_group</item>
        <item name="chat_highlight_msg">@color/light_chat_highlight_msg</item>
        <item name="contact_status">@color/light_contact_status</item>
        <item name="protocol_background">@color/light_protocol_background</item>
        <item name="link">@color/light_link</item>
        <item name="link_highlight">@color/light_link_highlight</item>
        <item name="unread_message_divider">@color/light_unread_message_divider</item>
        <item name="bar_unread_message">@color/light_bar_unread_message</item>
        <item name="bar_personal_unread_message">@color/light_bar_personal_unread_message</item>
        <item name="unread_message">@color/light_unread_message</item>
        <item name="personal_unread_message">@color/light_personal_unread_message</item>
    </style>

    <style name="EditText" parent="android:Widget.EditText">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
    </style>
</resources>
